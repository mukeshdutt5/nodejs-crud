extends layout

block title
  title= title    

block content
  center
    h2= message
    h3
     a(href=url + '/add') Add New User 
    table(border=1)
     tr
      th Name
      th Mobile
      th Email
      th Gender
      th Address
      th Hobbies
      th Edit
     for user in users
       tr
        td= user.name
        td= user.mobile
        td= user.email
          
        if user.gender == 'M'
         td Male
        else
         td Female
        td= user.address        
        td
        //if user.hobbies
         for hobby in user.hobbies
            span= hobby + ", "
        td
          a(href=url + '/edit?mobile=' + user.mobile) Edit Me